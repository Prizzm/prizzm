= render 'layouts/app_header'

#container.container_24
  %aside.grid_5.left
    %h1#logo= link_to "prizzm", home_path
    .userbit
      = image_tag current_user.main_image, :class => "fl thumb"
      .fl
        = link_to current_user.name, profile_path(current_user), :class => "uname"
        = link_to "Edit Profile", edit_user_registration_path(:back => request.url), :class => "facebox"
      .clear
      
    %nav
      %ul
        %li= link_to "Welcome", home_path, :class => active_if_current(home_path)
        %li= link_to "Your stuff", have_path(current_user), :class => active_if_current(have_path(current_user))
        %li= link_to "Following", people_following_path, :class => active_if_current(people_following_path)
        %li= link_to "Public", people_path, :class => active_if_current(people_path)
  
  = yield
  .clear
  
%footer.container_24
  = render "layouts/footer"
  - flash.each do |type, value|
    .flash{ :class => type.to_s }
      = value
  .clear

= render 'layouts/social_utils'
= render 'layouts/javascripts'