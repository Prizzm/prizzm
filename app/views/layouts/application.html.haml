!!! 
%html(lang='en')
  %head
    %meta(charset='utf-8')
    %title  Prizzm
    = csrf_meta_tag
    = favicon_link_tag
    = include_stylesheets :app
    = yield :page_style
  %body
    #prizzmbar
      %header
        %h1{:class => "grid_4"}= link_to "prizzm", "/"
        %nav{:class => "grid_9"}
          %ul
            %li= link_to "Dashboard", dashboard_path
            %li= link_to "My Stuff", home_path
            %li= link_to "Profile", profile_path(current_user)
            %li= link_to "Logout", destroy_user_session_url

        = form_tag "#", { :id => "search", :class => "grid_11"} do 
          %input{:type => "text", :placeholder => "Find products and companies"}
          %input{:type => "submit", :value => ""}

    - if current_user
      = hidden_field_tag "omniauth_tt_login_path", omniauth_authorize_path(User.new, 'twitter')
      = hidden_field_tag "omniauth_fb_login_path", omniauth_authorize_path(User.new, 'facebook')
      = hidden_field_tag "is_signed_in_fb", !current_user.access_token.blank?
      = hidden_field_tag "is_signed_in_tt", !current_user.tt_token.blank?
      = hidden_field_tag "processing_fb_id", ""
      = hidden_field_tag "processing_tt_id", ""

    = yield

    .clear

    %footer
      = render "layouts/footer"
      - flash.each do |type, value|
        .flash{ :class => type.to_s }
          = value 
  = render 'layouts/javascripts'
  /= render 'layouts/google_analytics'
