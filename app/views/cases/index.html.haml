- content_for :page_style do
  = include_stylesheets :profile

#content.grid_14
  = render :template => 'cases/new'
  - if @cases.count > 0
    %ul.table.list-display.case-list
      - @cases.each do |user_case|
        %li.row
          .cell
            %h3
              = link_to case_path(user_case) do
                = user_case.case_reference
                = user_case.title
          .cell
            = user_case.created_at.strftime '%m/%d/%Y'
          .cell
            %div{ :class => "status #{user_case.privacy if user_case.is_private?}" }= user_case.privacy
            = link_to "", user_case, :remote => true, :method => :delete, :class => 'close', :confirm => "Are you sure you want to delete this case?"
  - else
    #welcome
      No cases to be found! ...But that's a good thing.
      %p
        Add a case when you have an issue with a service.
        %br
        %span Mobile networks, Health insurance... Anything!
  
%aside.grid_6.right
  %article
    %h4
      .fl Suggested People
      = link_to "Refresh", "", :class => 'small fr'
      = link_to "View all", members_path, :class => 'small fr'
      .clear
    %ul.table
      - suggested_people.each do |person| 
        %li.row
          = link_to profile_path(person) do
            .cell.img
              = image_tag person.main_image, :class => 'smallthumb'
            .cell.uname= person.name
          .cell.action
            = follow_link_for person
          .cell.del
            = link_to "", "", :class => "close"
  %article
    %h4 Invite your friends
    = render :partial => "invitations/new"
  
  .clear
