= form_for @case do |f|
  -if @case.errors.any?
    #error_explanation
      %h2= "#{pluralize(@case.errors.count, "error")} prohibited this case from being saved:"
      %ul
        - @case.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :case_reference
    = f.text_field :case_reference
  .actions
    = f.submit 'Save'
