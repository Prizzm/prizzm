
%h1 Product Invitations

%table
  %thead
    %tr
      %th Invitation Name
      %th Last modified
      %th Edit
      %th Delete
  %tbody
    - @prizzm_invitations.each do |prizzm_invitation|
      %tr
        %td= link_to prizzm_invitation.name, prizzm_invitation
        %td= prizzm_invitation.updated_at.strftime '%A, %B %d, %Y'  
        %td
          = link_to edit_prizzm_invitation_path(prizzm_invitation), :class => "facebox" do
            = edit_icon
        %td
          = link_to prizzm_invitation, :confirm => 'Are you sure?', :method => :delete do
            = delete_icon


%br

= link_to 'Create an Invitation', new_prizzm_invitation_path, :class => 'btn primary large'
