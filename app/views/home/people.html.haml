%ul
  - if @items.count > 0
    - @items.each do |item|
      %li
        %span.name= item.name
        %span.image= item.main_image
        %span.review= truncate item.review, :length => 100
        %span.wanted= item.wanted_count
        %span.have= item.have_count
  - else
    %li No public items
