- content_for :page_style do
  = include_stylesheets :dashboard

%header
  %h2.grid_5 Dashboard

#content.grid_19
  #helptool
    %ul
      %li
        = link_to new_item_path + "#create", :id => "action-button", :class => "facebox" do 
          %h3 Add items
          Its easy to get started by adding things you own! Try finding them in the search bar above, or
          / Activates add item popup
          adding your own item!</a>
      %li
        = link_to have_path(current_user) do
          %h3 Have &amp; Want list
          Browse through yours, and other people's, things by viewing Have &amp; Want lists on profiles.
          / Links to Have list on profile
          Take a look at yours.
      %li
        = link_to new_case_path do
          %h3 Open a case
          Record and discuss cases you've had with companies and even share them to get opinions!
          / Links to Cases on profile
          Have you had problems with certain services?</a>
    .clear
    .close
    
  %section#tr-br.grid_18
    %h3
      %span trending brands
    %ul
      - trending_brands.each do |company|
        %li
          = link_to company_path(company) do
            = image_tag company.main_image
            = company.name
    %a.fr{:href => ""} View all
  .clear
  .clear
  %section#la-rev.grid_9
    %h3
      %span latest reviews
    %ul
      - latest_reviews.each do |review|
        %li
          = image_tag review.from["image"]
          .fl
            %h4= review.data[0]["name"]
            %p
              = truncate(review.data[0]["review"], :length => 160)
              %br= link_to "Read more", item_path(review.data[0]["cached_slug"])
            .rating
          .clear
  %section#mo-re-ca.grid_9
    %h3
      %span most recent cases
    %ul
      - recent_cases.each do |user_case|
        %li
          /= image_tag review.from["image"]
          .fl
            %h4= user_case.title
            %p
              = truncate(user_case.description, :length => 160)
              %br= link_to "Read more", case_path(user_case)
            .rating
          .clear
%aside.grid_5
  %article
    %h4.fl People following
    %a.small.fr{:href => ""} View all
    .clear
    .table
      - events_about_users.each do |event|
        .row
          .cell.img
          .cell
            = format_feed_item event,  :timestamp => true

  %article
    %h4.fl Products following
    %a.small.fr{:href => ""} View all
    .clear
    .table
      - events_about_products.each do |event|
        .row
          .cell.img
          .cell
            = format_feed_item event,  :timestamp => true
  %article
    %h4.fl Brands following
    %a.small.fr{:href => ""} View all
    .clear
    .table
      - events_about_companies.each do |event|
        .row
          .cell.img
          .cell
            = format_feed_item event,  :timestamp => true
.clear

- content_for :jquery do
  :javascript
    $(document).ready(function() {
      $('.close', '#helptool').bind('click', function() {
        $('#helptool').slideUp(1000);
      });
    });
