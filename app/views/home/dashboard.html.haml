- content_for :page_style do
  = include_stylesheets :livef

#content.grid_16
  = render :template => 'items/new'
  
  %ul.fol-f.table
    - latest_reviews.each do |item|
      %li.rv.row
        .user.cell
          = link_to "" do
            = image_tag item.user.main_image
            %span.uname= item.user.name
        .post.cell
          = image_tag item.main_image, :class => "fl"
          .fl.cont
            %h1=link_to item.name, (item)
            = item.review 
            .footerbit
              Added #{time_ago_in_words item.updated_at} ago
              \|
              = link_to "Share", ""
    %li.activ.row
      .user.cell
        = link_to "" do
          = image_tag current_user.main_image
      .post.cell
        = link_to "Charles"
        is following
        = link_to "Sidney Burks"
        
  = link_to "More", "", :class => "updt-feed"
%aside.grid_6.left
  %article
    %h4.fl Suggested People
    = link_to "Refresh", "", :class => 'small fr'
    = link_to "View all", members_path, :class => 'small fr'
    .clear
    %ul.table
      - suggested_people.each do |person| 
        %li.row
          = link_to profile_path(person) do
            .cell.img
              = image_tag person.main_image, :class => 'smallthumb'
            .cell.uname= person.name
          .cell.action
            = follow_link_for person
          .cell.del
            = link_to "", "", :class => "close"
  %article
    %h4 Popular Tags
    %ul.tags
      %li.as-selection-item.gld= link_to "Have", have_path(current_user), :class => tab_for(have_path(current_user))
      %li.as-selection-item.gld= link_to "Want", want_path(current_user), :class => tab_for(want_path(current_user))
      %li.as-selection-item.gld= link_to "Case"
      %li= link_to "Electronics"
      %li= link_to "House"
      %li= link_to "Kitchen"
      %li= link_to "Shoes"
      %li= link_to "Hats"
      %li= link_to "Laptops"
      %li= link_to "New"
      %li= link_to "Shit"
      %li= link_to "Sucks"
      %li= link_to "Cool"
   
.clear

- content_for :jquery do
  :javascript
    $(document).ready(function() {
      $('.close', '#helptool').bind('click', function() {
        $('#helptool').slideUp(1000);
      });
    });
