= form_for @incentive do |f|
  -if @incentive.errors.any?
    #error_explanation
      %h2= "#{pluralize(@incentive.errors.count, "error")} prohibited this incentive from being saved:"
      %ul
        - @incentive.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :expiration
    = f.datetime_select :expiration
  .field
    = f.label :code
    = f.text_field :code
  .actions
    = f.submit 'Save'
