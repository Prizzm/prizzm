  <body>
    <div id="container" class="container_24">
       <h1>prizzm</h1>
       <sub>Putting the power back in your hands</sub>
      
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= link_to "Sign up", new_registration_path(resource_name), :id => "signup", :class => "round"%>
        <%= f.text_field :email, :class => "round", :placeholder => "email" %>
        <%= f.password_field :password, :class => "round", :placeholder => "password" %>
        <%= f.submit :id => "submit", :value => "login", :class => "button"%>
        <a href="<%= new_password_path(resource_name) %>" id="forgot" class="clearfix">Forgot your password?</a>
      <% end %>
      <ul class="logsoc">
        <li>
          <%= link_to image_tag('/images/landing/fb-login-button.png'), omniauth_authorize_path(resource_name, :facebook) -%>
        </li>
        <li>
          <%= link_to image_tag('/images/landing/login-with-twitter.png'), omniauth_authorize_path(resource_name, :twitter) -%>
        </li>
      </ul>
      
