<!doctype html>
<html lang="en">
    <head>
        <%= csrf_meta_tag %>
        <meta charset="utf-8" />
        <title>Prizzm</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!--[if lte IE 9]><%= include_stylesheets :ie %><![endif]-->
        <%= include_stylesheets :login %>
    </head>
    <body>
        <div id="main">
            <header>
                <h1 class="ir"><a href="">Prizzm</a></h1>
            </header>

            <section class="round grad">
                <h2>Walk the Walk? <br /> Then Talk the Talk.</h2>
                Have your <em>voice heard</em> by the companies who make the products <em>you buy!</em> Rate & comment the products <em>you own</em>, collect & list the products <em>you want</em>.
            </section>
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <a id="signup" class="round" href="<%= new_registration_path(resource_name) %>"><h2>Sign up now!</h2></a>
                <h3>login</h3>
                <%= f.text_field :email, :class => "round", :placeholder => "email" %>
                <%= f.password_field :password, :class => "round", :placeholder => "password" %>
                <%= image_submit_tag "button-submit.png", :class => "round grad", :id => "submit",  :alt => "Go!" %>
                <a href="<%= new_password_path(resource_name) %>" id="forgot" class="clearfix">Forgot something?</a>
                <ul>
                  <li><a id="fb" class="ir" href="<%= omniauth_authorize_path(resource_name, :facebook)%>">Login with Facebook</a></li>
                  <li><a id="twitter" class="ir" href="<%= omniauth_authorize_path(resource_name, :twitter) %>">Sign in with Twitter</a></li>
                </ul>
            <% end %>
            
            <div class="clear"></div>
            
            <footer>
                <div id="copyright">
                    brought to you by a group of whitty guys
                </div>
            </footer>
        </div>
        <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" %>
        <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js' %>
        <%= hoptoad_javascript_notifier %>
    </body>
</html>
