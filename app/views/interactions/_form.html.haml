= form_for [@user, @item, @interaction] do |f|
  -if @interaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@interaction.errors.count, "error")} prohibited this interaction from being saved:"
      %ul
        - @interaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :time_start
    = f.datetime_select :time_start
  .field
    = f.label :time_end
    = f.datetime_select :time_end
  .field
    = f.label :contact
    = f.text_field :contact
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
