%h1 Current Mail Templates

%table
  %thead
    %tr
      %th Name
      %th Edit
      %th Delete

  %tbody
  - @prizzm_mail_templates.each do |prizzm_mail_template|
    %tr
      %td= link_to prizzm_mail_template.name, prizzm_mail_template, :class => "facebox"
      %td
        = link_to  edit_prizzm_mail_template_path(prizzm_mail_template) do
          = edit_icon
      %td
        = link_to  prizzm_mail_template, :confirm => 'Are you sure?', :method => :delete do
          = delete_icon


%br

= link_to 'New email template', new_prizzm_mail_template_path, :class => "btn primary large"
