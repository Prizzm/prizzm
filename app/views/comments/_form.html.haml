.in-comm
  .comment_input_box
    = form_for :comment,  :url => comments_path(object_type(commentable), commentable.id), :format => :js, :html => { :class => "new_comment" }, :remote => true do |f| 
      .share-input{:id => "share-input-#{parent_id}"}
        = f.text_area :body, :'data-text' => "Write a comment...", :placeholder => "Write a comment...",  :rows => 3, :id => "comment_body_#{parent_id}", :value => ""
      .clear
      /.close
      %ul.finalstep.buttons.fr
        %li.fb{:title => "post to facebook"}
          / facebook checkbox goes here
        %li.tt
          / twitter checkbox goes here
        %li.privacy
          / privacy drop down goes here
        %li
          = hidden_field_tag :parent_id, parent_id, :id => "parent_id_#{parent_id}"
          = f.submit 'Comment', :class => "green button", :id => "comment_submit_#{parent_id}"
          .loading{:style => "display:none;float:left"}
      .clear