#new_comment_box
  #comment_input_box
    = form_for :comment,  :url => comments_path(object_type(commentable), commentable.id), :format => :js, :html => { :id => "new_comment" }, :remote => true do |f| 
      #share-input
        = f.text_area :body, :'data-text' => "Comment on this review...", :placeholder => "Comment...",  :rows => 3
        .cancel
      .clear
      = f.submit 'Comment', :class => "button"
      .loading{:style => "display:none;float:left"}
      .clear

- content_for :jquery do
  :javascript
    $(document).ready(function() {
      $('#new_comment').bind('ajax:beforeSend', function() {
        $('.loading', '#new_comment_box').show();
      });

      $('#new_comment').bind('ajax:complete', function() {
        $('.loading','#new_comment_box').hide();
      });
    });
