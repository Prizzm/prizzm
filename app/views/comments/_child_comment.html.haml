%li.row.child{:id => "comment-#{comment.id}-content"}
  .cell.img
    = image_tag comment.user.photo.url
  .cell.comm
    = link_to comment.user.name, profile_path(comment.user)
    \- 
    = comment.body
    .comm-ft
      = "#{time_ago_in_words(comment.created_at)} ago"
      = link_to "", comment_path(object_type(commentable),  commentable.id, comment.id), :'data-commentid' => comment.id, :class => 'close', :remote => true, :'data-method' => :delete, :format => :js if belongs_to_current_user?(comment)
