%li.row{:id => "comment-#{comment.id}-content"}
  .cell.img
    = image_tag comment.user.photo.url
  .cell.comm
    = link_to comment.user.name, profile_path(comment.user)
    \- 
    = comment.comment
    %br/
    = "#{time_ago_in_words(comment.created_at)} ago"
    %br/
    - if user_signed_in? && (current_user.id.eql? Item.find(comment.commentable_id).user_id)
      = link_to 'Delete', comment_path(commentable.class.to_s.underscore,  commentable.id, comment.id), :'data-commentid' => comment.id, :class => 'delete-comment-link close', :remote => true, :'data-method' => :delete, :format => :js
