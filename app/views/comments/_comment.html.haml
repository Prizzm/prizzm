%div{:class => 'interaction-content', :id => "interaction-#{comment.id}-content"}
  .interaction-user= comment.user.name
  .user-image
    .interaction-profile-image= image_tag comment.user.photo.url
  .user-content
    .interaction-description= comment.comment
  .interaction-created-at #{time_ago_in_words(comment.created_at)} ago
  .delete-interaction= link_to 'Delete Comment', comment, :'data-interactionid' => comment.id, :class => 'delete-interaction-link', :remote => true, :'data-method' => :delete, :'data-type' => :json

