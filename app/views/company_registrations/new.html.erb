<%= form_for(@company, :as => "company", :url => company_registration_path, :html => {:class => "signupform"}) do |f| %>
  <%= link_to "Login", new_company_session_path, :id => "login", :class => "button green"%>
  <%= devise_error_messages! -%> 
  
  <%= f.email_field :name, :placeholder => "company name" %>
  <%= f.email_field :email, :placeholder => "email" %>
  <%= f.password_field :password, :placeholder => "password" %>
  <%= f.password_field :password_confirmation, :placeholder => "confirm password" %>
  <%= f.submit "Sign up" %>
<% end %>
