=stylesheet_link_tag("product_invite")
%h1 New product
.add-product
  = form_for @product, :url => company_products_path(@company)  do |f|
    -if @product.errors.any?
      #error_explanation
        %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
        %ul
          - @product.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :type
      = f.text_field :product_type
    .field
      = f.label :upc
      = f.text_field :upc
    .field
      = f.label :description
      = f.text_area :description
    .field
      = f.label :price
      = f.text_field :price
    .actions
      = f.submit 'Save'

= link_to 'Back', products_path
