= semantic_form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name, :input_html => {:placeholder => "Enter the name of this product"}
  = f.input :description, :input_html => {:rows => 10, :placeholder => "Describe your product here"}
  = f.input :price, :input_html => {:placeholder => "How much does this product cost?"}
  = f.input :upc, :input_html => {:placeholder => "Enter a UPC code if available"}
  = f.input :product_type
  = f.commit_button "Save product info", :button_html => {:class => "btn primary large"}
