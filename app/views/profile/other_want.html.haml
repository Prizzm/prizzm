#content.grid_15

  %h2 What #{@user.first_name} wants
  = link_to "Add item", new_item_path + "#create", :id => "action-button", :class => "add button facebox" 
  .clear

  %ul.list-display
    - @user.wanted_items.publicly.each do |item|
      %li
        = link_to(item) do
          %h3= item.name
          = image_tag item.main_image
          %p= truncate strip_tags(item.review), :length => 110
          Read review
