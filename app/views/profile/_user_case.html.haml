%li.row{:id => "user_case_#{user_case.id}"}
  .cell
    %h3
      = link_to case_path(user_case) do
        = user_case.case_reference
        = user_case.title
  .cell
    = user_case.created_at.strftime '%m/%d/%Y'
  .cell
    %div{ :class => "status #{user_case.privacy if user_case.is_private?}" }= user_case.privacy
    = link_to "", user_case, :remote => true, :method => :delete, :class => 'close', :confirm => "Are you sure you want to delete this case?"
