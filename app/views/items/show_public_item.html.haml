- content_for :page_style do
  = include_stylesheets :item_detail
  
#content.grid_14
  %section#pub-review
    .title
      = image_tag @item.user.main_image, :class => "userthumb fl"
      .fl
        = link_to @item.user.name, profile_path(@item.user)
        has a
        #{@item.name}
        .clear
        = link_to "I want this", "", :class => "button add"
        = follow_link_for @item.user
      .clear
    
    #rendered-review
      - if @item.review.blank?
        = render 'default_review'
      - else
        .fl
          = render 'images'
        #options
          = link_to @item.url, @item.url
        = raw sanitize @item.review, :tags => %w(p strong em ul ol li blockquote), :attributes => %w(id class style), :attributes => {}
    .clear
    #footerbit
      Written #{@item.created_at.to_date} - Edited #{time_ago_in_words @item.updated_at} ago |
      %a{:href => ""} #{pluralize @item.comment_threads.count, "Comment"}
    .clear
  .clear
  - if user_signed_in?
    %section#new-comment
      = comment_form_for @item
  - else
    = link_to "Login to post comments!", login_popup_path, :class => 'facebox'
  %ul#comments.table
    = comment_collection_for @item

%aside.grid_6
  
