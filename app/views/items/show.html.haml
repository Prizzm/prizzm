= link_to "Back", home_path

#item-details
  %h2#title.headline ITEM DETAILS - #{resource.name}

  #text-fields
    .column
      %p.fields
        %strong Name:
        %br/
        #{best_in_place @item, :name, :path => [current_user, @item] }
      %p.fields
        %strong Contact Name:
        %br/
        #{best_in_place @item, :contact_name, :path => [current_user, @item] }
      %p.fields
        %strong Address:
        %br/
        #{best_in_place @item, :address, :path => [current_user, @item] }
      %p.fields
        %strong Phone Number:
        %br/
        #{best_in_place @item, :phone_number, :path => [current_user, @item] }
      %p.fields
        %strong Secondary Number:
        %br/
        #{best_in_place @item, :secondary_number, :path => [current_user, @item] }

    .column
      %p.fields
        %strong Industry:
        %br/
        #{best_in_place @item, :industry, :path => [current_user, @item] }
      %p.fields
        %strong URL:
        %br/
        = link_to @item.url, @item.url
      %p.fields
        %strong Email:
        %br/
        #{best_in_place @item, :email, :path => [current_user, @item] }
        %br/
        #{mail_to @item.email}
      %p.fields
        %strong Facebook:
        %br/
        #{best_in_place @item, :facebook, :path => [current_user, @item] }
      %p.fields
        %strong Twitter:
        %br/
        #{best_in_place @item, :twitter, :path => [current_user, @item] }
    .column
      %p.fields
        %strong Description:
        %br/
        #{best_in_place @item, :description, :path => [current_user, @item] }
      .fields
        %strong Rating:
        %div{:id => "item_#{@item.id}_rating", :class => "rating"}
          = form_for [@user, @item], :remote => true do |f|
            %div{:id => "stars-wrapper-#{@item.id}"}
              = f.collection_select :rating, [1, 2, 3], :to_s, :to_s, {}
        %br
        .social
          .twitter_button
            = link_to image_tag('twitter_24x24.png'), '#'
            = check_box_tag "interaction[shared_twitter]", 1, false
            = hidden_field_tag "is_signed_in_tt", !current_user.tt_token.blank?
            = hidden_field_tag "omniauth_tt_login_path", omniauth_authorize_path(User.new, 'twitter')
          .facebook_button
            = link_to image_tag('facebook_24x24.png'), '#'
            = check_box_tag "interaction[shared_facebook]", 1, false
            = hidden_field_tag "is_signed_in_fb", !current_user.access_token.blank?
            = hidden_field_tag "omniauth_fb_login_path", omniauth_authorize_path(User.new, 'facebook')

      %br/
      %p.fields
        %strong Added on: 
        = @item.created_at.strftime('%D')
      %p.fields 
        %strong Last updated on:
        = @item.updated_at.strftime('%D')


  = render 'images'

  #image-field
    /%p= image_tag @item.images.first.image.url, :width => "100%"
  .clear
  

  = form_for [@item, Image.new], :html => {:multipart => true} do |f|
    Enter a URL for your image:
    = f.text_field :remote_image_url
    = f.hidden_field :image_cache
    = f.submit 'Upload Photo'


#photos
  = fields_for Image.new do |f|
    = f.file_field :image, :rel => item_images_path(@item)                        

= photo_uploadify



#new_interaction_box
  #interaction_input_box
    = form_for [current_user, @interaction = Interaction.new], :remote => true do |f|
      = f.text_area :description, :id => 'interaction-input', :'data-text' => "Share your thoughts"
      = f.submit 'Save', :id => 'item-interaction-submit'
      .social
        .twitter_button
          = link_to image_tag('twitter_24x24.png'), '#'
          = f.check_box :shared_twitter
        .facebook_button
          = link_to image_tag('facebook_24x24.png'), '#'
          = f.check_box :shared_facebook
      #interaction_stars
        = f.collection_select :rating, [1, 2, 3], :to_s, :to_s, {}
      = f.hidden_field :new_items, :value => @item.id
      .clear

- if @item.interactions.count == 0
  %h2.headline There are no interactions for this Item
  %hr
- else 
  %h2.headline Interactions for: #{@item.name}
  %hr
  #interactions
    #interactions_feed= render :partial => 'home/interaction', :collection => @item.interactions.order('created_at desc')

:javascript
  $("#stars-wrapper-#{@item.id}").stars({
    inputType: "select",
    callback: function(ui, type, value, event){
      var item = #{@item.id};
      update_rating('items', item,value);
    },
    cancelShow: false
  });

  $("#interaction_stars").stars({
    inputType: "select",
    cancelShow: false
  });
