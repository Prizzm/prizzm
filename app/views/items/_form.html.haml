%h2.title= @item.name

= form_for @item, :remote => true, :method => :put do |f|
  = f.label :name
  = f.text_field :name

  = f.label :review
  = f.text_area :review,
                :cols => nil,
                :rows => nil,
                :style => 'min-height: 250px; width: 100%;',
                :value => h(html_clean @item.review)

  %ul.finalstep
    .fl
      %li= f.label :privacy
      %li= select 'item', 'privacy', {:Private => 'private', :Public => 'public'}
    .fr
      %li= f.submit 'Save'
      %li= link_to "Cancel", "#", :class => "button red cancel-edit"
