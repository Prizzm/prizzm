%h2 Add a product

= form_for [current_user, @item], :html => {:class => 'action addhave addItem'} do |f|
  = f.label :name, '+'
  = f.text_field :name, :placeholder => "Product name"

  = f.label :company
  = f.text_field :company, :placeholder => "Company name"

  %div.product
    %div.image
      = image_tag 'default-item-image.jpg', :height => 100, :width => 100
    %ul
      %li.prev Prev
      %li.next Next

    = f.label :url
    = f.text_field :url, :placeholder => "Product link"

  = f.text_area :review, :placeholder => "Review", :cols => nil, :rows => nil
  = f.text_field :tag_list, :placeholder => "+ Add tags"

  = f.hidden_field :company_id
  = f.hidden_field :product_id

  = hidden_field :product, :description
  = hidden_field :product, :image_url

  %ul.buttons
    %li.fb{:title => "post to facebook"}
      / facebook checkbox goes here
    %li.tt{:title => "share to twitter"}
      / twitter checkbox goes here
    %li.privacy
      = f.check_box :privacy, {}, 'private', 'public'
      Mark Private

    %li= button_to "Cancel"
    %li= f.submit "Save"
